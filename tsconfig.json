{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/layouts/*": ["./src/layouts/*"],
      "@/screens/*": ["./src/screens/*"],
      "@/utils/*": ["./utils/*"],
      "@/mirage/*": ["./mirage/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/styles": ["./styles.json"],
      "@/i18n/*": ["./src/i18n/*"],
      "@/hooks/*": ["./app/hooks/*"],
      "@/features/*": ["./src/features/*"],
      "@/models/*": ["./src/models/*"],
      "@/src/*": ["./src/*"],
      "@/services/*": ["./src/services/*"],
      "@/fixtures/*": ["./src/__fixtures_/*"],
      "@/forms/*": ["./src/forms/*"],
      "@/modules/*": ["./src/customModules/*"]
    }
  },
  "typeRoots": ["types"],
  "extends": "expo/tsconfig.base"
}